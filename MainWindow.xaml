<Window x:Class="MangaTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaTracker"
        mc:Ignorable="d"
        Title="Manga Tracker" Height="800" Width="600" ResizeMode="CanMinimize" WindowStyle="SingleBorderWindow">
    <Grid>
        <StackPanel Name="SP" Margin="0,0,300,0">
            <Label Content="Name"/>
            <Label Content="Release Day"/>
            <Label Content="Read?"/>
            <Label Content=""/> <!--Spacer-->
        </StackPanel>
        <StackPanel Margin="300,0,0,0">
            <Image Height="100" Width="300"/>
        </StackPanel>
        <Button Content="Add New Entry" Click="AddNew" Margin="0,680,0,10" FontSize="32"/>
    </Grid>
</Window>
