<Window x:Class="MangaTracker.NewEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaTracker"
        mc:Ignorable="d"
        Title="NewEntry" Height="450" Width="800">
    <Grid>
        <TextBox Name="NameOfManga" HorizontalAlignment="Left" Margin="10,10,0,0" Text="Name of Manga" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" TextChanged="TextBox_TextChanged" Height="40" FontSize="24" TextAlignment="Center"/>
        <Button Content="Choose Day" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Height="40" Width="300" FontSize="24" Click="ChooseDay"/>

    </Grid>
</Window>
